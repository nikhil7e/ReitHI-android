<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchResultLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:id="@+id/courseNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:text="courseNum"
            android:background="@drawable/border_circular"
            android:padding="12dp"
            android:textColor="@android:color/white" />
        <TextView
            android:id="@+id/creditsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:textSize="12dp"
            android:text="6 credits"/>

        <TextView
            android:id="@+id/levelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="12dp"
            android:text="level"/>
        <TextView
            android:id="@+id/schoolTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="12dp"
            android:text="school"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/verticalLayout"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="courseName"/>



        <LinearLayout
            android:id="@+id/horizontalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/textLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/overallScoreTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Overall Score" />

                <TextView
                    android:id="@+id/difficultyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Difficulty" />

                <TextView
                    android:id="@+id/materialTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Material" />

                <TextView
                    android:id="@+id/workloadTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Workload" />

                <TextView
                    android:id="@+id/teachingQualityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Teaching Quality" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/allRatingsLayout"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <LinearLayout
                    android:id="@+id/overallRatingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/difficultyRatingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                   >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/materialRatingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                 >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/workloadRatingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tqRatingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ratingdot_empty"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>